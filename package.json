{
  "name": "websports",
  "version": "1.0.0",
  "description": "All successfull sportsmen",
  "main": "index.html",
  "scripts": {
    "start": "npm run watch:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lite": "lite-server",
    "scss": "node-sass -o css/ css/",
    "watch:scss": "onchange 'css/*.scss' -- npm run scss",
    "watch:all": "parallelshell 'npm run watch:scss' 'npm run lite'",
    "clean": "rimraf dist",
    "copyfonts": "copyfiles -f node_modules/font-awesome/fonts/* dist/fonts",
    "imageminnba": "imagemin img/nba/* --out-dir='dist/img/nba'",
    "imageminf1": "imagemin img/formula1/* --out-dir='dist/img/formula1'",
    "imagemincl": "imagemin img/championsleague/* --out-dir='dist/img/championsleague'",
    "imageminrest": "imagemin img/* --out-dir='dist/img'",
    "usemin": "usemin contactus.html -d dist -o dist/contactus.html --htmlmin true && usemin champions.html -d dist -o dist/champions.html --htmlmin true && usemin index.html -d dist -o dist/index.html --htmlmin true && usemin nba.html -d dist -o dist/nba.html --htmlmin true",
    "build": "npm run clean && npm run imageminrest && npm run imageminnba && npm run imageminf1 && npm run imagemincl && npm run copyfonts && npm run usemin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrKenobii/WebSports.git"
  },
  "author": "Anil Duyguc",
  "license": "ISC",
  "devDependencies": {
    "cssmin": "^0.4.3",
    "htmlmin": "^0.0.7",
    "lite-server": "^2.6.1",
    "node-sass": "^6.0.1",
    "onchange": "^3.3.0",
    "parallelshell": "^3.0.1",
    "rimraf": "^2.6.2",
    "uglifyjs": "^2.4.11",
    "usemin-cli": "^0.5.1"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "bootstrap-social": "^5.1.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.6.0",
    "less": "^4.1.2",
    "popper.js": "^1.16.1"
  }
}
